<p id="notice"><%= notice %></p>

<h1 class="pt-4">Types</h1>

<div class="container row">
  <div class="col-4">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @types.each do |type| %>
          <tr>
            <td><%= type.name %></td>
            <td><%= link_to 'Show', type, class: "btn btn-light btn-sm" %></td>
            <td><%= link_to 'Edit', edit_type_path(type), class: "btn btn-light btn-sm" %></td>
            <td><%= link_to 'Destroy', type, class: "btn btn-light btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-8 text-center">
    <h2>Bookmarks by type</h2>
    <%= pie_chart @markes_types, label: "name" %>
  </div>
</div>


<br>

<%= link_to 'New Type', new_type_path, class: "btn btn-outline-dark" %>

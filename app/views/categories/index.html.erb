<p id="notice"><%= notice %></p>

<h1 class="pt-4">Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Visibility level</th>
      <th scope="col">Subcategories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><% if category.public %>
              <%= "Public" %>
            <% else %>
              <%= "Private" %>
            <% end %>
        </td>
        <td><%= category.find_children(category) %></td>
        <td><%= link_to 'Show', category, class: "btn btn-light btn-sm" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-light btn-sm" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-outline-dark" %>
